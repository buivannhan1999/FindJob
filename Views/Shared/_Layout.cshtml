                    else if (user.Type == 1)
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="/User/Created_CV">Tạo CV online</a></li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
