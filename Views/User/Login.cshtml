
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Đăng nhập</div>
                </div>

                <div style="padding-top:30px" class="panel-body">

                    @if (TempData["error"] != null)
                    {
                        <div id="login-alert" class="alert alert-danger col-sm-12">
                            @TempData["error"]
                        </div>
                    }

                    @using (Html.BeginForm("FormLogin", "User", FormMethod.Post, new { id = "loginform", @class = "form-horizontal" }))
                    {
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="login-username" type="text" class="form-control" name="Account" placeholder="Nhập tài khoản đăng nhập">
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input id="login-password" type="password" class="form-control" name="Password" placeholder="Nhập mật khẩu">
                        </div>
                        <div class="input-group">
                            <div class="checkbox">
                                <label>
                                    <input id="login-remember" type="checkbox" name="remember" value="1"> Nhớ mật khẩu
                                </label>
                            </div>
                        </div>
                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->

                            <div class="col-sm-12 controls">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-6">
                                    <button type="submit" id="btn-login" class="btn btn-lg btn-success">Đăng nhập  </button>
                                </div>
                                <div class="col-sm-3"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 control">
                                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                    Bạn chưa có tài khoản!
                                    <a href="/User/Register">
                                        Đăng ký
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    

