
@{
    ViewBag.Title = "Nhà tuyển dụng đã lưu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var jodFeature = ViewBag.JobFeature as List<FindJob.Models.EF.Post>;
    var saveEmployer = ViewBag.saveEmployer as List<FindJob.Models.EF.Save>;
}

<section id="jobs" style="margin-top: 50px">
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <h2>Nhà tuyển dụng đã lưu</h2>

                <div class="jobs">
                    @foreach (var item in saveEmployer)
                    {
                        var url = "/Employer/Index/" + item.Employer.User_ID;
                        <!-- Job offer 1 -->
                        <a href="@url">
                            <div class="featured"></div>
                            <img src="~/Assets/images/employer/@item.Employer.Image" height="60px" alt="" class="img-circle">
                            <div class="col-sm-10 title">
                                <h5>@item.Employer.Fullname</h5>
                                <p>@item.Employer.Place</p>
                            </div>
                            <div class="col-sm-12 data">
                                    <span class="col-sm-5"><i class="fa fa-map-marker" style="color: #14b1bb;"></i>@item.Employer.Address</span>
                                    <span class="col-sm-3"><i class="fa fa-phone" style="color: #14b1bb;"></i>@item.Employer.Phone</span>
                                    <span class="col-sm-4"><i class="fa fa-calendar" style="color: #14b1bb;"></i>@item.Employer.Email</span>
                            </div>
                        </a>
                    }

                </div>

            </div>
            <div class="col-sm-4">
                <h2>Việc làm nổi bật</h2>
                @foreach (var item in jodFeature)
                {
                    var url = "/Post/Detail/" + item.ID;
                    <!-- Job offer 1 -->
                    <a href="@url">
                        <div class="featured-job">
                            <div class="col-sm-3">
                                <img src="~/Assets/images/employer/@item.Employer.Image" height="60px" alt="" class="img-circle">
                            </div>
                            <div class="col-sm-9 title">
                                <h5>@item.Title</h5>
                                <p>@item.Career.CareerName</p>
                            </div>
                            <div class="col-sm-12 data">
                                <span class="city"><i class="fa fa-map-marker"></i>@item.Location</span>
                                <span class="type full-time"><i class="fa fa-clock-o"></i>@item.Form</span>
                                <span class="sallary"><i class="fa fa-dollar"></i>@item.Salary.Value.ToString("N0") đ</span>
                            </div>
                            <div class="col-sm-12 description" style="height: 140px; overflow: hidden">
                                @Html.Raw(item.Descriptions);
                            </div>
                        </div>
                    </a>
                }

            </div>
        </div>
    </div>
</section>

